# OpenAI API Secret Configuration
# Copy this file to openai-secret.yaml and add your API key
#
# To create the secret:
# 1. Copy this file: cp openai-secret.yaml.example openai-secret.yaml
# 2. Replace <your-api-key-here> with your actual OpenAI API key
# 3. Apply: kubectl apply -f openai-secret.yaml
#
# Or create directly via kubectl:
# kubectl create secret generic openai-secret \
#   --namespace=gavigo \
#   --from-literal=OPENAI_API_KEY=<your-api-key-here>

apiVersion: v1
kind: Secret
metadata:
  name: openai-secret
  namespace: gavigo
type: Opaque
stringData:
  OPENAI_API_KEY: "<your-api-key-here>"
